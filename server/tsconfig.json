{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "../dist_server",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2016",
    "allowSyntheticDefaultImports": false,
    "types": ["jest", "node"],
    "baseUrl": "/",
    "paths": {
      "@server/*": [".//*"],
      "@client/*": ["../client/*"],
      "@dist/*": ["../dist/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
}
